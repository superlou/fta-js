<g class="tree-node" transform="translate({{@model.x}}, {{@model.y}})" {{on "mousedown" (fn @onSelect @model)}} ...attributes>
  <path d={{this.pathD}} shape-rendering="optimizeQuality"/>
  <text x="0" y="4" class="ref">
    {{@model.ref}}
  </text>
  <g>
    <rect fill="white" stroke="black" width="100" height="100"/>    
    <text class="desc"
      {{did-insert this.wrapText @model.desc 200}}
      {{did-update this.wrapText @model.desc 200}}/>
  </g>
</g>
<div class="tree-builder">
  <svg width="100%" height="500" tabindex="0"
      viewBox="{{this.viewBoxX}} {{this.viewBoxY}} {{this.viewBoxW}} {{this.viewBoxH}}"
      {{on "mousemove" this.mouseMove}}
      {{on "mouseup" this.mouseUp}}
      {{on "mousedown" this.mouseDown}}
      {{on "keydown" this.keyPress}}
      {{on "wheel" this.wheel}}
      {{on-resize this.onResize}}
      >
    {{#each @tree.edges as |edge|}}
      <TreeEdge @start={{edge.child}} @finish={{edge.parent}}/>
    {{/each}}
    {{#each @tree.nodes as |node|}}
      <TreeNode @model={{node}} @onSelect={{this.select}} class="{{if (eq @selected node) 'selected'}}"/>
    {{/each}}
  </svg>
  <div class="hotkeys">
    <ul>
      <li><span class="hotkey">a</span> Add AND gate</li>
      <li><span class="hotkey">o</span> Add OR gate</li>
      <li><span class="hotkey">e</span> Add basic event</li>
      <li><span class="hotkey">l</span> Start linking (click 2nd node to link)</li>
      <li><span class="hotkey">del</span> Delete selected node and its links</li>
    </ul>
  </div>
  <div>
    <p>Solution: {{this.solution}}</p>
  </div>
</div>
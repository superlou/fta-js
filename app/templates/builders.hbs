<ul>
  {{#each this.model as |faultTree|}}
    <li>
      <LinkTo @route="builder" @model={{faultTree.id}}>{{faultTree.id}}</LinkTo>
      <button {{on "click" (fn this.deleteFaultTree faultTree)}}>X</button>
    </li>
  {{/each}}
</ul>

<button type="button" {{on "click" this.createFaultTree}}>New Fault Tree</button>